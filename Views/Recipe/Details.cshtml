@model RecipeApp.Models.RecipeModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RecipeID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RecipeInstructions)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeInstructions)
        </dd>
    </dl>
</div>

<table id="ingredientTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ingredient Name</th>
            <th>Quantity</th>
            <th>Units</th>
        </tr>
    </thead>
    <tbody id="ingredientTableBody">
        @for (int i = 0; i < Model.Ingredients.Count; i++)
        {
            <tr>
                <td>@Model.Ingredients[i].IngredientName</td>
                <td>@Model.Ingredients[i].Quantity</td>
                <td>@Model.Ingredients[i].UOM</td>
            </tr>
        }

    </tbody>
</table>
<br />
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RecipeID }) |
    <a asp-action="Index">Back to List</a>
</div>
